                                    res= cv2.bitwise_and(img,img2)
                                    fig.add_subplot(rows, columns, 1)
                                    plt.imshow(img)
                                    plt.axis('off')
                                    plt.title("primera")
                                    fig.add_subplot(rows, columns, 2)
