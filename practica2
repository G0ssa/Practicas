import cv2
import numpy as np
import matplotlib.pyplot as plt
import matplotlib.image as mpimg
img_path = "cat.jpg"
img = cv2.imread(img_path)
img2 = cv2.imread(img_path)

# Crear ventana
cv2.namedWindow('gatico')

while (True):
    cv2.imshow('gatico', img)
    if cv2.waitKey(1) == ord('q'):
        break
cv2.destroyAllWindows()
