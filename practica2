                                    plt.text(.5, 0.5, 'CONJUNCION', horizontalalignment='center', verticalalignment='center')
                                    fig.add_subplot(rows, columns, 4)
                                    plt.imshow(res)
                                    plt.axis('off')
                                    plt.title("RESPUESTA")
